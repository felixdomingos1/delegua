{
    "compilerOptions": {
        "module": "esnext",
        "outDir": "dist/umd",
        "target": "es2015",
        "rootDir": "fontes",
        "allowJs": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["fontes/**/*", "rollup.config.ts"],
    "exclude": [
        "babel.config.js",
        "jest.config.ts",
        "rollup.config.ts",
        "coverage/**/*",
        "dist/**/*",
        "testes/**/*"
    ]
}